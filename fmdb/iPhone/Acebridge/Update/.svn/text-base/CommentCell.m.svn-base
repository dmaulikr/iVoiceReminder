    {
        static NSString *CellIdentifier = @"Cell";
        
        UITableViewCell *cell = [_tableView dequeueReusableCellWithIdentifier:CellIdentifier];
        if (cell == nil) {
            cell = [[[NSBundle mainBundle] loadNibNamed:@"NotificationCellDetail" owner:nil options:nil] objectAtIndex:0];
        } 
        AtNotification *commentInfo =(AtNotification*)[commentArray objectAtIndex:indexPath.row];
        
        UILabel *commentlbl=(UILabel*)[cell viewWithTag:2];
        commentlbl.font= [UIFont fontWithName:@"Helvetica" size:13];
        
        if ([commentInfo.relatedOperate isEqualToString:@"commented"]) {
            
//            NSString *relateTypeStr=nil;
//            
//            NSLog(@"%@",commentInfo.relatedType);
//            
//            int a=[commentInfo.relatedType intValue];
//            
//            switch (a) {
//                case 1:
//                    relateTypeStr=@"blog";
//                    break;
//                case 2:
//                    relateTypeStr=@"event";
//                    break;
//                case 3:
//                    relateTypeStr=@"career";
//                    break;
//                case 4:
//                    relateTypeStr=@"promotion";
//                    break;
//                case 5:
//                    relateTypeStr=@"status";
//                    break;
//                case 6:
//                    relateTypeStr=@"group";
//                    break;
//                case 7:
//                    relateTypeStr=@"piebridge";
//                    break;
//                default:
//                    break;
//            }
            if (commentInfo.isShared) {
                
                [commentlbl setText:[NSString stringWithFormat:@"%@ %@ your shared %@",commentInfo.relatedUserName,commentInfo.relatedOperate,commentInfo.relatedType]];
            }
            else{
                [commentlbl setText:[NSString stringWithFormat:@"%@ %@ your %@",commentInfo.relatedUserName,commentInfo.relatedOperate,commentInfo.relatedType]];
            }
              
        }
        else if ([commentInfo.relatedOperate isEqualToString:@"replied"]) {
        
            
                [commentlbl setText:[NSString stringWithFormat:@"%@ %@ your comment",commentInfo.relatedUserName,commentInfo.relatedOperate]];
        }
        
        
        
        UILabel *content=(UILabel*)[cell viewWithTag:3];
        UIFont* myfont = [UIFont fontWithName:@"Helvetica" size:14];
        CGSize textsize= [commentInfo.nContent sizeWithFont:myfont constrainedToSize:CGSizeMake(250, CGFLOAT_MAX) lineBreakMode:UILineBreakModeWordWrap];
        content.numberOfLines = textsize.height/16+1;
        content.frame=CGRectMake(63, 28, textsize.width+5, textsize.height);
        [content setText:commentInfo.nContent];
        
        UILabel *commentTitle=(UILabel*)[cell viewWithTag:4];
        CGSize textsize1= [commentInfo.relatedTitle sizeWithFont:myfont constrainedToSize:CGSizeMake(250, CGFLOAT_MAX) lineBreakMode:UILineBreakModeWordWrap];
        commentTitle.numberOfLines = textsize1.height/16+1;
        commentTitle.frame=CGRectMake(63,textsize.height+38, textsize1.width+5, textsize1.height);
        [commentTitle setText:commentInfo.relatedTitle];
        
        UILabel *time=(UILabel*)[cell viewWithTag:6];
        time.frame=CGRectMake(210, 38+textsize.height+textsize1.height, 100, 15);
        time.text=[TimeUtils timestamp:commentInfo.nTime];
        return cell; 
    }
    if((indexPath.row) %20 ==0)
    {
        if(!isLoading)
        {
            isLoading=true;
            [self getList:[commentArray count]/20+1];
            return loadCell;
        }
    }
    return [[UITableViewCell alloc] init];
